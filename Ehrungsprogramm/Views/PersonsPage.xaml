<Page
    x:Class="Ehrungsprogramm.Views.PersonsPage"
    Style="{DynamicResource MahApps.Styles.Page}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:properties="clr-namespace:Ehrungsprogramm.Properties"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:converters="clr-namespace:Ehrungsprogramm.Converters"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="800">

    <Page.Resources>
        <converters:NumericComparisonGreaterToVisibilityConverter x:Key="NumericGreaterVisibilityConverter"/>

        <DataTemplate x:Key="CellTemplateScoreBLSV">
            <StackPanel Orientation="Horizontal">
                <TextBlock Width="100" Text="{Binding ScoreBLSV}" VerticalAlignment="Center"/>
                <Ellipse Width="20" Height="20" Margin="3" StrokeThickness="1" Stroke="Black" Fill="Brown" Visibility="{Binding ScoreBLSV, Converter={StaticResource NumericGreaterVisibilityConverter}, ConverterParameter=25}"/>
                <Ellipse Width="20" Height="20" Margin="3" StrokeThickness="1" Stroke="Black" Fill="Silver" Visibility="{Binding ScoreBLSV, Converter={StaticResource NumericGreaterVisibilityConverter}, ConverterParameter=50}"/>
                <Ellipse Width="20" Height="20" Margin="3" StrokeThickness="1" Stroke="Black" Fill="Gold" Visibility="{Binding ScoreBLSV, Converter={StaticResource NumericGreaterVisibilityConverter}, ConverterParameter=75}"/>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="CellTemplateScoreTSV">
            <StackPanel Orientation="Horizontal">
                <TextBlock Width="100" Text="{Binding ScoreTSV}" VerticalAlignment="Center"/>
                <Ellipse Width="20" Height="20" Margin="3" StrokeThickness="1" Stroke="Black" Fill="Brown" Visibility="{Binding ScoreTSV, Converter={StaticResource NumericGreaterVisibilityConverter}, ConverterParameter=25}"/>
                <Ellipse Width="20" Height="20" Margin="3" StrokeThickness="1" Stroke="Black" Fill="Silver" Visibility="{Binding ScoreTSV, Converter={StaticResource NumericGreaterVisibilityConverter}, ConverterParameter=50}"/>
                <Ellipse Width="20" Height="20" Margin="3" StrokeThickness="1" Stroke="Black" Fill="Gold" Visibility="{Binding ScoreTSV, Converter={StaticResource NumericGreaterVisibilityConverter}, ConverterParameter=75}"/>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="CellTemplateDetail">
            <Button x:Name="DetailsButton" Style="{StaticResource MahApps.Styles.Button.Circle}" Background="{StaticResource MahApps.Brushes.Gray2}" Visibility="Hidden" Width="30" Height="30" Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type Page}}, Path=DataContext.PersonDetailCommand}" CommandParameter="{Binding}">
                <controls:FontIcon FontSize="20" Glyph="&#xEA1F;"/>
            </Button>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ListViewItem}}, Path=IsMouseOver}" Value="True">
                    <Setter TargetName="DetailsButton" Property="Visibility" Value="Visible"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ListViewItem}}, Path=IsSelected}" Value="True">
                    <Setter TargetName="DetailsButton" Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>
    </Page.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
            Style="{StaticResource PageTitleStyle}"
            Margin="{StaticResource MediumLeftMargin}"
            Text="{x:Static properties:Resources.PersonsPageTitle}" />

        <ListView Grid.Row="2" ItemsSource="{Binding People}" Margin="{StaticResource MediumLeftRightMargin}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="{x:Static properties:Resources.FirstNameString}" DisplayMemberBinding="{Binding FirstName}"/>
                    <GridViewColumn Header="{x:Static properties:Resources.NameString}" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="{x:Static properties:Resources.EntryDateString}" DisplayMemberBinding="{Binding EntryDate, StringFormat=d}"/>
                    <GridViewColumn Header="{x:Static properties:Resources.ScoreBLSVString}" CellTemplate="{StaticResource CellTemplateScoreBLSV}"/>
                    <GridViewColumn Header="{x:Static properties:Resources.ScoreTSVString}" CellTemplate="{StaticResource CellTemplateScoreTSV}"/>
                    <GridViewColumn CellTemplate="{StaticResource CellTemplateDetail}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
