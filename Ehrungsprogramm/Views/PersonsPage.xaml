<Page
    x:Class="Ehrungsprogramm.Views.PersonsPage"
    Style="{DynamicResource MahApps.Styles.Page}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:properties="clr-namespace:Ehrungsprogramm.Properties"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:converters="clr-namespace:Ehrungsprogramm.Converters"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="800">

    <Page.Resources>
        <converters:NumericComparisonGreaterToVisibilityConverter x:Key="NumericGreaterVisibilityConverter"/>

        <DataTemplate x:Key="CellTemplateScoreBLSV">
            <StackPanel Orientation="Horizontal">
                <TextBlock Width="100" Text="{Binding ScoreBLSV}" VerticalAlignment="Center"/>
                <Ellipse Width="20" Height="20" Margin="3" StrokeThickness="1" Stroke="Black" Fill="Brown" Visibility="{Binding ScoreBLSV, Converter={StaticResource NumericGreaterVisibilityConverter}, ConverterParameter=25}"/>
                <Ellipse Width="20" Height="20" Margin="3" StrokeThickness="1" Stroke="Black" Fill="Silver" Visibility="{Binding ScoreBLSV, Converter={StaticResource NumericGreaterVisibilityConverter}, ConverterParameter=50}"/>
                <Ellipse Width="20" Height="20" Margin="3" StrokeThickness="1" Stroke="Black" Fill="Gold" Visibility="{Binding ScoreBLSV, Converter={StaticResource NumericGreaterVisibilityConverter}, ConverterParameter=75}"/>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="CellTemplateScoreTSV">
            <StackPanel Orientation="Horizontal">
                <TextBlock Width="100" Text="{Binding ScoreTSV}" VerticalAlignment="Center"/>
                <Ellipse Width="20" Height="20" Margin="3" StrokeThickness="1" Stroke="Black" Fill="Brown" Visibility="{Binding ScoreTSV, Converter={StaticResource NumericGreaterVisibilityConverter}, ConverterParameter=25}"/>
                <Ellipse Width="20" Height="20" Margin="3" StrokeThickness="1" Stroke="Black" Fill="Silver" Visibility="{Binding ScoreTSV, Converter={StaticResource NumericGreaterVisibilityConverter}, ConverterParameter=50}"/>
                <Ellipse Width="20" Height="20" Margin="3" StrokeThickness="1" Stroke="Black" Fill="Gold" Visibility="{Binding ScoreTSV, Converter={StaticResource NumericGreaterVisibilityConverter}, ConverterParameter=75}"/>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="CellTemplateDetail">
            <Button x:Name="DetailsButton" Style="{StaticResource MahApps.Styles.Button.Square.Accent}" Background="{StaticResource MahApps.Brushes.Gray2}" Visibility="Hidden" Width="30" Height="30" Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type Page}}, Path=DataContext.PersonDetailCommand}" CommandParameter="{Binding}">
                <controls:FontIcon FontSize="20" Glyph="&#xEA1F;"/>
            </Button>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ListViewItem}}, Path=IsMouseOver}" Value="True">
                    <Setter TargetName="DetailsButton" Property="Visibility" Value="Visible"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ListViewItem}}, Path=IsSelected}" Value="True">
                    <Setter TargetName="DetailsButton" Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>
    </Page.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
            Style="{StaticResource PageTitleStyle}"
            Margin="{StaticResource MediumLeftMargin}"
            Text="{x:Static properties:Resources.PersonsPageTitle}" />

        <ListView Grid.Row="2" ItemsSource="{Binding People}" Margin="{StaticResource MediumLeftRightMargin}">
            <!-- Style to align the column contents at the top -->
            <ListView.Style>
                <Style TargetType="{x:Type ListView}">
                    <Setter Property="ItemContainerStyle">
                        <Setter.Value>
                            <Style TargetType="{x:Type ListViewItem}" BasedOn="{StaticResource MahApps.Styles.ListViewItem}">
                                <Setter Property="VerticalContentAlignment" Value="Top"/>
                            </Style>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.Style>

            <ListView.View>
                <GridView>
                    <GridViewColumn Header="" Width="30">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Expander Margin="-5,2,-5000,0" HorizontalAlignment="Left" Width="{Binding Path=ActualWidth, RelativeSource={RelativeSource AncestorType={x:Type ItemsPresenter}}}" controls:HeaderedControlHelper.HeaderBackground="Transparent" BorderThickness="0">
                                    <TabControl Margin="30,0,0,0" Style="{StaticResource MahApps.Styles.TabControl.ColorPicker}">
                                        <TabItem>
                                            <TabItem.Header>
                                                <StackPanel Orientation="Horizontal">
                                                    <controls:FontIcon FontSize="20" Glyph="&#xE946;"/>
                                                    <TextBlock Text="Infos" VerticalAlignment="Center" FontSize="{StaticResource MediumFontSize}"/>
                                                </StackPanel>
                                            </TabItem.Header>
                                            <StackPanel>
                                                <TextBlock>
                                                    <TextBlock.Text>
                                                        <MultiBinding StringFormat="{}{0} {1}">
                                                            <Binding Path="FirstName"/>
                                                            <Binding Path="Name"/>
                                                        </MultiBinding>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                                <TextBlock Text="{Binding BirthDate}"/>
                                                <TextBlock Text="{Binding EntryDate}"/>
                                            </StackPanel>
                                        </TabItem>
                                        <TabItem>
                                            <TabItem.Header>
                                                <StackPanel Orientation="Horizontal">
                                                    <controls:FontIcon FontSize="20" Glyph="&#xE821;"/>
                                                    <TextBlock Text="Functions" VerticalAlignment="Center" FontSize="{StaticResource MediumFontSize}"/>
                                                </StackPanel>
                                            </TabItem.Header>
                                            <ListView ItemsSource="{Binding Functions}">
                                                <ListView.View>
                                                    <GridView>
                                                        <GridViewColumn Header="{x:Static properties:Resources.DescriptionString}" DisplayMemberBinding="{Binding Description}"/>
                                                        <GridViewColumn Header="{x:Static properties:Resources.FunctionTypeString}" DisplayMemberBinding="{Binding Type}"/>
                                                        <GridViewColumn Header="{x:Static properties:Resources.StartString}" DisplayMemberBinding="{Binding StartDate}"/>
                                                        <GridViewColumn Header="{x:Static properties:Resources.EndString}" DisplayMemberBinding="{Binding EndDate}"/>
                                                    </GridView>
                                                </ListView.View>
                                            </ListView>
                                        </TabItem>
                                    </TabControl>
                                </Expander>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="{x:Static properties:Resources.FirstNameString}" DisplayMemberBinding="{Binding FirstName}"/>
                    <GridViewColumn Header="{x:Static properties:Resources.NameString}" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="{x:Static properties:Resources.EntryDateString}" DisplayMemberBinding="{Binding EntryDate, StringFormat=d}"/>
                    <GridViewColumn Header="{x:Static properties:Resources.ScoreBLSVString}" CellTemplate="{StaticResource CellTemplateScoreBLSV}"/>
                    <GridViewColumn Header="{x:Static properties:Resources.ScoreTSVString}" CellTemplate="{StaticResource CellTemplateScoreTSV}"/>
                    <GridViewColumn CellTemplate="{StaticResource CellTemplateDetail}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
